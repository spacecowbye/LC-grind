{
  "manifest_version": 3,
  "name": "LC grind" ,
  "version": "1.0",
  "description": "NO MORE BROWSING TILL YOU SOLVE THE PROBLEM OF THE DAY",
  "permissions": [
    "declarativeNetRequest",
    "scripting",
    "storage",
    "tabs",
    "activeTab",
    "alarms",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
     "type": "module"
  },
  "content_scripts": [{
    "matches": ["*://*.leetcode.com/problems/*"],
    "exclude_matches": ["*://*.leetcode.com/problems/*/submit/*"],
    "js": ["content.js"]
  }]
}

